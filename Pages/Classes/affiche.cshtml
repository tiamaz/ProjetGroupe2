@page
@model ProjetGroupe2.Pages.Classes.afficheModel
@{
}


<form method="post">

 <div class="card">
                
                <div class="card-body">
                    <input  asp-for="publication.Contenu" class="card-title" />
                    <input hidden asp-for="publication.IdClasse">
                     <button submit class="btn btn-primary" >Ajouter</button>
                </div>
</div>

</form>

@if(Model.publications.Count() > 0)
{
        @foreach(var item in Model.publications)
        {
            <div class="card">
                <h5 class="card-header">@item.IdClasse</h5>
                <div class="card-body">
                    <h5 class="card-title">@item.DatePublication</h5>
                    <p class="card-text">@item.Contenu</p>
                </div>
            </div>

        }
}

else{
 <div class="card">
        <div class="card-body">
            <p class="card-text"> @User.Identity.Name  Vous n'avez aucune publication</p>
        </div>
    </div>
}
